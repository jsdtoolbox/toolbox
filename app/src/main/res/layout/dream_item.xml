<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/public_space_value_10"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:textSize="@dimen/public_textsize_value_15"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/public_space_value_10"
        android:id="@+id/describe"
        android:textSize="@dimen/public_textsize_value_14"
        android:textColor="@color/T4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>