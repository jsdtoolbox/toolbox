    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />
    <com.example.zenghui.bmobdemo.views.RefreshLayout
        android:id="@+id/myRefreshListView"
        android:layout_width="match_parent"
