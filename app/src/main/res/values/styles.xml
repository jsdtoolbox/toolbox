<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CashBusDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/none</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TvNormal">
        <item name="android:textSize">@dimen/public_textsize_value_15</item>
        <item name="android:textColor">@color/T4</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TvNotSingleLine">
        <item name="android:textSize">@dimen/public_textsize_value_15</item>
        <item name="android:textColor">@color/T4</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LytNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/public_space_value_15</item>
        <item name="android:paddingRight">@dimen/public_space_value_15</item>
        <item name="android:paddingTop">@dimen/public_space_value_10</item>
        <item name="android:paddingBottom">@dimen/public_space_value_10</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>

    </style>
</resources>
